<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.9">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:id="@+id/layoutSubtitle">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:alpha="0.3"
            android:layout_margin="10dp">

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#aaffffaa">

            <LinearLayout
                android:background="#aaaaffaa"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center">

                <TextView
                    android:text="1位"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textRank"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:padding="4dp"/>

                <TextView
                    android:text="タイトル"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textTitle"
                    android:textSize="16sp"
                    android:textStyle="normal|bold"
                    android:padding="3dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ddffff">

                <TextView
                    android:text="更新日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textDate"
                    android:layout_weight="1" />

                <TextView
                    android:text="10話"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textCount"
                    android:layout_weight="1"/>

                <TextView
                    android:text="ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textCode"
                    android:layout_weight="1" />

                <TextView
                    android:text="1,000pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textPoint"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="ジャンル"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textGenre"
                    android:background="#aaffddff"
                    android:layout_margin="2dp"
                    android:layout_weight="1"/>

                <TextView
                    android:text="船橋太郎"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textWritter"
                    android:layout_margin="2dp"
                    android:background="#5588ffaa"/>
            </LinearLayout>

            <TextView
                android:text="あらすじ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textInfo"
                android:padding="4dp"/>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>