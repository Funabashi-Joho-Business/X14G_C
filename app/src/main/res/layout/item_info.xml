<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="8dp">


    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"

                  android:background="#aaffffaa">

        <LinearLayout
            android:background="#aaaaffaa"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center">

            <TextView
                android:text="タイトル"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textTitle"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                android:padding="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ddffff">

            <TextView
                android:text="更新日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textDate"
                android:layout_weight="1" />

            <TextView
                android:text="1,000pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textPoint"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="ジャンル"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textGenre"
                android:background="#aaffddff"
                android:layout_margin="2dp"
                android:layout_weight="1"/>

            <TextView
                android:text="船橋太郎"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textWritter"
                android:layout_margin="2dp"
                android:background="#5588ffaa"/>
        </LinearLayout>

        <TextView
            android:text="あらすじ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInfo"
            android:padding="4dp"/>


    </LinearLayout>

</FrameLayout>